{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "Local:",
      "startServerReadyTimeout": 120000,
      "url": [
        "http://localhost:4173",
        "http://localhost:4173/dashboard",
        "http://localhost:4173/hr/crew-management"
      ],
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 2048,
          "cpuSlowdownMultiplier": 2
        },
        "screenEmulation": {
          "mobile": false,
          "width": 1920,
          "height": 1080,
          "deviceScaleFactor": 1
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.70 }],
        "categories:accessibility": ["error", { "minScore": 0.90 }],
        "categories:best-practices": ["error", { "minScore": 0.85 }],
        
        "first-contentful-paint": ["error", { "maxNumericValue": 3500 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 4500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 500 }],
        "speed-index": ["error", { "maxNumericValue": 5000 }],
        "time-to-interactive": ["error", { "maxNumericValue": 6000 }],
        
        "uses-text-compression": ["error", { "minScore": 1 }],
        "uses-long-cache-ttl": ["error", { "minScore": 0.8 }],
        "render-blocking-resources": ["warn", { "minScore": 0.7 }],
        "efficient-animated-content": ["warn", { "minScore": 0.9 }],
        
        "total-byte-weight": ["error", { "maxNumericValue": 1500000 }],
        "mainthread-work-breakdown": ["warn", { "maxNumericValue": 4000 }],
        "bootup-time": ["warn", { "maxNumericValue": 3500 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
